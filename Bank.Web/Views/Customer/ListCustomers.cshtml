@model Bank.Web.ViewModels.ListCustomersViewModel


@{
    ViewData["Title"] = "ListCustomers";
}


<div class="row mt-3">
    <div class="col">
        <input id="SearchName" type="text" class="form-control" placeholder="Name">
    </div>
    <div class="col">
        <input id="SearchCity" type="text" class="form-control" placeholder="City">
    </div>
    <button class="btn btn-primary" type="button" onclick="SearchCustomers()">Search</button>
</div>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Customer ID  <div onclick="SortCustomers('customerId', true)" class="fas fa-sort-up position-absolute"></div> <div onclick="SortCustomers('customerId', false)" class="fas fa-sort-down"></div></th>
                <th scope="col">National ID <div onclick="SortCustomers('nationalId', true)" class="fas fa-sort-up position-absolute"></div> <div onclick="SortCustomers('nationalId', false)" class="fas fa-sort-down"></div></th>
                <th scope="col">Name <div onclick="SortCustomers('surname', true)" class="fas fa-sort-up position-absolute"></div> <div onclick="SortCustomers('surname', false)" class="fas fa-sort-down"></div> </th>
                <th scope="col">Address <div onclick="SortCustomers('streetAddress', true)" class="fas fa-sort-up position-absolute"></div> <div onclick="SortCustomers('streetAddress', false)" class="fas fa-sort-down"></div></th>
                <th scope="col">City <div onclick="SortCustomers('city', true)" class="fas fa-sort-up position-absolute"></div> <div onclick="SortCustomers('city', false)" class="fas fa-sort-down"></div></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <th scope="row">@customer.CustomerId</th>
                    <td>@customer.NationalId</td>
                    <td>@customer.Givenname @customer.Surname</td>
                    <td>@customer.Streetaddress</td>
                    <td>@customer.City</td>
                    <td><a asp-controller="Customer" asp-action="viewCustomer" asp-route-searchID="@customer.CustomerId">View</a></td>                   
                </tr>
            }
        </tbody>
    </table>
</div>
<partial name="_PagerPartial" model="Model.PagingViewModel"/>
           
      

